lookup: bash -c "./bin/nsqlookupd --tcp-address=0.0.0.0:7777 --http-address=0.0.0.0:7778 --broadcast-address=$MY_IP"
nsqd: bash -c "echo 'Using IP as $MY_IP...' && ./bin/nsqd --broadcast-address=localhost --lookupd-tcp-address=127.0.0.1:7777 -data-path /tmp/nsqd/1 --tcp-address=0.0.0.0:7779 --http-address=0.0.0.0:7780 --mem-queue-size=0 --worker-id=1 --broadcast-address=$MY_IP"
admin: bash -c "./bin/nsqadmin --lookupd-http-address=127.0.0.1:7778 --http-address=0.0.0.0:7000"
